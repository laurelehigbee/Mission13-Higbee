@{
    ViewData["Title"] = "Add Record"; <!--Title for the web page-->
}
@model Bowler

<div class="text-center">
    <h1 class="display-4">Add A Bowler</h1> <!--Display/heading-->
</div>
<div asp-validation-summary="All" class="mt-4 center-contents"></div>
<div class="form-wrapper">
    <form method="post" class="row gy-2 gx-3 align-items-center col-md-8">
        <label asp-for="BowlerFirstName" autofocus>First Name:</label><input asp-for="BowlerFirstName" /><br />
        <label asp-for="BowlerMiddleInit">Middle Initial:</label><input asp-for="BowlerMiddleInit" /><br />
        <label asp-for="BowlerLastName">Last Name:</label><input asp-for="BowlerLastName" /><br />
        <label asp-for="BowlerAddress">Address:</label><input asp-for="BowlerAddress" /><br />
        <label asp-for="BowlerCity">City:</label><input asp-for="BowlerCity" /><br />
        <label asp-for="BowlerState">State:</label><input asp-for="BowlerState" /><br />
        <label asp-for="BowlerZip">Zip:</label><input asp-for="BowlerZip" /><br />
        <label asp-for="BowlerPhoneNumber">Phone Number:</label><input asp-for="BowlerPhoneNumber" /><br />
        <label asp-for="TeamID">Team:</label><br /> <!--Team input-->
        <select asp-for="TeamID">
            <option value="">Select a Team:</option>
            @foreach (Team t in ViewBag.Teams)
            {
                <option value="@t.TeamID">@t.TeamName</option>
            }
        </select><br />

        <br />

        <input class="btn btn-primary my-4" type="submit" value="Submit" />
    </form>
</div>


